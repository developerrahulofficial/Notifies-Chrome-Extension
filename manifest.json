{
    "manifest_version": 2,
    "name": "Website Notification",
    "version": "1.0",
    "description": "Notify on WhatsApp when specific websites are visited.",
    "permissions": ["tabs", "notifications", "webNavigation"],
    "background": {
      "scripts": ["dist/background.js"],
      "persistent": false
    },
    "browser_action": {
      "default_popup": "popup.html",
      "default_icon": {
        "16": "icon16.png",
        "48": "icon48.png",
        "128": "icon128.png"
      }
    },
    "icons": {
      "16": "icon16.png",
      "48": "icon48.png",
      "128": "icon128.png"
    }
  }
  